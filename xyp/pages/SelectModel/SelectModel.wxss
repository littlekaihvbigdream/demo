}
 
.select_icon {
  width: 40rpx;
  height: 40rpx;
}
 
.text {
  margin-left: 30rpx;
}

.text2 {
  margin-left: 50rpx;
}
/*选择样式*/
.whole{
  display: flex;
  align-items: center;
  padding: 19rpx 30rpx;
  border-bottom: 1px solid #D8D8D8;
}
.whole>view:nth-child(2)>text{
  font-size: 32rpx;
  color: #434343;
  margin-left: 8px;
}
.whole>view:nth-child(2){
  width: 92%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.Selection{
  width: 43rpx;
  height: 43rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid #A8A9A9;
  transition: 1s;
}
.cell-line {
  width: 100%;
  /* height: 1px; */
  border-bottom: 1px solid #D8D8D8;
  /* background-color: #A8A9A9; */
}
.Selection>image{
  transition: 1s;
  display: none;
   width: 100%;
  height: 100%;
}
.SelectionActive{
  transition: 1s;
  width: 43rpx;
  height: 43rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid #3BC26D;
}
.SelectionActive>image{
  transition: 1s;
  display: block;
  width: 100%;
  height: 100%;
}
