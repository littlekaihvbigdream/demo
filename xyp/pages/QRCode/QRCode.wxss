/* pages/QRCode/QRCode.wxss */

page{
  width: 100%;
  height: 100%;
}

.codeBg{
  padding: 0 50rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.main{
  background-color: #fff;
  border-radius: 20rpx;
  height: 560rpx;
  width: 100%;
  text-align: center;
  position: relative;
  padding-top: 110rpx;
}
.main>image:nth-child(1){
  left: 41%;
  position: absolute;
  top: -60rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 2px solid #fff;
}
.name{
  font-size: 40rpx;
  color: #232323;
}

.txt{
  font-size: 32rpx;
  color: #534F4F;
  margin-top: 12rpx;
  margin-bottom: 12rpx;
}
.main>image:nth-child(4){
  width: 300rpx;
  height: 300rpx;
}
.btn{
  width: 85%;
  position: fixed;
  bottom: 60rpx;
  border-radius: 15rpx;
  background-color: #3BC26D;
  color: #fff;
}
