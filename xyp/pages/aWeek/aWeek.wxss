page {
  background-color: #f6f5f5;
}

.top-navs {
  width: 100%;
  background-color: #fff;
  position: fixed;
  z-index: 10;
  top: 0;
  border-bottom: 1px solid #f6f5f5;
}

.search {
  height: 120rpx;
  background-color: #fff;
  /* padding: 30rpx 30rpx 0 30rpx; */
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}
.labels>view {
  padding:0 0.3rem;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 26rpx;
  background-color: #ffbc3a;
  color: #fff;
  margin-left: 10rpx;
  display: inline-block;
}
.inp {
  width: 100%;
  border-radius: 40rpx;
  background-color: #f6f5f5;
  padding-left: 60rpx;
  position: relative;
  height: 75rpx;
}

.inp>image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 15rpx;
  top: 20rpx;
}

.inp>input {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}

.screenBtn {
  width: 80rpx;
  text-align: center;
}

.screenBtn>image {
  width: 34rpx;
  height: 35rpx;
  margin: auto;
}

.screenBtn>view {
  width: 80rpx;
  font-size: 30rpx;
  color: #534f4f;
}

.customerList {
  margin-top: 200rpx;
  background-color: #fff;
}
.times{
  padding:20rpx 30rpx;
  font-size: 30rpx;
  color: #434343;
}

.customerList-li {
  padding: 20rpx 30rpx;
  padding-left: 100rpx;
  padding-bottom: 80rpx;
  position: relative;
  border-bottom: 1px solid #f6f5f5;
}

.customerList-li>image:nth-child(1){
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.customerList-li>image:nth-child(2){
  position: absolute;
  top: 60rpx;
  left: 60rpx;
  width: 45rpx;
  height: 45rpx;
}

.customerList-name {
  display: flex;
  justify-content: space-between;
}

.customerList-name>image {
  width: 18rpx;
  height: 30rpx;
}

.customerList-name>.name>text {
  font-size: 30rpx;
  color: #434343;
}

.customerList-name>.name {
  display: flex;
  align-items: center;
}

.customerList-name>.name>view {
  width: 110rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 26rpx;
  background-color: #ffbc3a;
  color: #fff;
  margin-left: 10rpx;
}

.name>image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.txtList {
  color: #999;
  font-size: 28rpx;
  padding-top: 10rpx;
}

.label-f {
  float: right;
  display: flex;
  height: 80rpx;
}

.label-f>view {
  margin-left: 20rpx;
  width: 150rpx;
  height: 55rpx;
  border: 1px solid #3bc26d;
  border-radius: 40rpx;
  color: #3bc26d;
  font-size: 28rpx;
  text-align: center;
  line-height: 55rpx;
}
.label-f>button {
  margin-left: 20rpx;
  width: 185rpx;
  height: 60rpx;
  border: 1px solid #3bc26d;
  border-radius: 25rpx;
  color: #3bc26d;
  font-size: 28rpx;
  text-align: center;
  line-height: 55rpx;
}

.down {
  color: #999;
  font-size: 28rpx;
  padding: 30rpx;
  text-align: center;
}

/* 筛选弹窗 */

.screen {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}

.screenBox {
  position: absolute;
  top: 0;
  right: 0;
  width: 70%;
  background-color: #F5F5F5;
  height: 100%;
  transition: 0.5s;
  padding: 0rpx 30rpx;
}

.screenBox1 {
  position: absolute;
  top: 0;
  right: -70%;
  width: 70%;
  background-color: #F5F5F5;
  transition: 0.5s;
  height: 100%;
  padding: 0rpx 30rpx;
}

.b-titel {
  margin-top: 40rpx;
  font-size: 30rpx;
  color: #232323;
}

.b-time {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.b-time>text {
  font-size: 28rpx;
  color: #534f4f;
}

.b-time>image {
  width: 40rpx;
  height: 40rpx;
}

.time {
  margin: 0 10rpx;
  width: 300rpx;
  height: 60rpx;
  border: 1px solid #c7c7c7;
  border-radius: 5rpx;
  color: #534f4f;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}
.classification{
  margin-top: 20rpx;
}
.classification>view{
  display: inline-block;
  margin-right: 10rpx;
  margin-top: 0.3rem;
  padding: 0 0.5rem;
  height: 55rpx;
  background-color: #fff;
  border-radius: 30rpx;
  color: #534F4F;
  font-size: 26rpx;
  text-align: center;
  line-height: 55rpx;
}
.timeActive{
  color: #3BC26D !important;
  border: 1px solid #3BC26D;
}
.suerBtn{
  width: 100%;
  position: absolute;
  bottom: 20rpx;
  right:10rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.suerBtn>button{
  width: 200rpx;
  height: 70rpx;
  border-radius:40rpx;
  color: #FFFFFF;
  font-size: 34rpx;
  background-color: #3BC26D;
  line-height: 70rpx;
}
.suerBtn>button:active{
  opacity: 0.8;
}
.suerBtn>button:nth-child(1){
  background-color: #FFBC3A !important;
}