page{
  background-color: #f6f5f5;
}
.b-box{
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 999;
}
.search{
  height: 120rpx;
  background-color: #fff;
  /* padding: 30rpx 30rpx 0 30rpx; */
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}
.inp{
  width: 100%;
  border-radius: 40rpx;
  background-color: #f6f5f5;
  padding-left: 60rpx;
  position: relative;
  height: 75rpx;
}
.inp>image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 15rpx;
  top: 20rpx;
}
.inp>input{
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}
.b_down{
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #534F4F;
}
.b_down>view{
  /* width: 85rpx; */
  line-height: 85rpx;
  height: 80rpx;
  font-size: 32rpx;
  text-align: center;
}
.b_down>view>image{
  width: 30rpx !important;
  height: 30rpx !important;
  vertical-align:middle;
}
.tabActive{
  color: #3BC26D;
   border-bottom: 5rpx solid #3BC26D;
}
.tabActive1{
  color: #3BC26D !important;
}
.commodity{
  margin-top: 240rpx;
  background-color: #fff;
}
.commodityList{
  display: flex;
  /* align-items: center; */
  /* justify-content: space-between; */
  padding:20rpx 30rpx;
  border-bottom: 1px solid #f6f5f5;
  position: relative;
}
/* .commodityList>view{
  width: 65%;
} */
.img-modo{
  position: relative;
}
.commodityList>.img-modo>image:nth-child(1){
  width: 220rpx;
  height: 176rpx;
  margin-right: 10rpx;
}
.commodityList>.img-modo>image:nth-child(2){
  position: absolute;
  right: 0;
  top: -10rpx;
  width: 80rpx;
  height: 80rpx;
}
.comm-text{
  margin-left: 10rpx;
  width: 100%;
}
.comm-text image{
  width: 15rpx;
  height: 25rpx;
  margin-left: 10rpx;
}
.comm-text>view:nth-child(1){
  font-size: 30rpx;
  color: #534F4F;
}
.comm-text>button{
  position: absolute;
  bottom: 10rpx;
  right: 30rpx;
  font-size: 28rpx;
  color: #3BC26D;
  border: 1px solid #3BC26D;
  width: 185rpx;
  height: 55rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 30rpx;
  float: right;
  margin-top: 10rpx;
  margin-right: 30rpx;
}
.b-comm{
  color: #999999;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.b-comm>text{
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 1;
overflow: hidden;
margin-right: 20rpx;
width: 100%;
}
.down{
  color: #999999;
  font-size: 28rpx;
  padding:30rpx;
  text-align: center;
}
button{
  margin-left: 20rpx;
  width: 185rpx;
  height: 60rpx;
  border: 1px solid #3BC26D;
  border-radius: 25rpx;
  color: #3BC26D;
  font-size: 28rpx;
  text-align: center;
  line-height: 55rpx;
}
/* 子级选择 */
.tabSon{
  padding: 30rpx;
  background-color: #fff;
  z-index: 9999;
  border-bottom: 1px solid #f6f5f5;
}
.tabSon>view{
  display: inline-block;
  padding: 0 10rpx;
  font-size: 30rpx;
  color: #534F4F;
}