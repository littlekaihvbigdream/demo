<button bindtap='showbtn'>{{isupdate?"提交":"编辑"}}</button>
<!-- 下拉选择城市 -->
<view class='slectCity' wx:if="{{showCity}}">
  <view class='cityBox'>
    <view class='close'>
      <view bindtap='closeCitys'>取消</view>
      <view bindtap='suercity'>确定</view>
    </view>
    <view class='box'>
    <view class='province'>
    <view wx:for='{{city1}}' class='{{cityindex1==index?"provinceActive":""}}' bindtap='clickTab' data-index="{{index}}" data-current="{{item.regionCode}}" data-code='{{item.fullPath}}' data-name='{{item.regionName}}'>{{item.regionName}}</view>
    </view>
    <view class='city'>
    <view wx:for='{{city2}}' class='{{cityindex2==index?"provinceActive":""}}' bindtap='clickTab1' data-index="{{index}}" data-current="{{item.regionCode}}" data-code='{{item.fullPath}}' data-name='{{item.regionName}}'>{{item.regionName}}</view>
    </view>
    <view class='area'>
    <view wx:for='{{city3}}' class='{{cityindex3==index?"provinceActive":""}}' bindtap='clickTab2' data-index="{{index}}" data-current="{{item.regionCode}}" data-code='{{item.fullPath}}' data-name='{{item.regionName}}'>{{item.regionName}}</view>
    </view>
    </view>
  </view>
</view>
<!-- 网点选择 -->
<view class='slectCity' wx:if="{{showDot}}">
  <view class='cityBox'>
  <view class='close'>
      <view bindtap='closeDot'>取消</view>
      <view bindtap='suerDot'>确定</view>
    </view>
    <view class='boxs'>
      <view wx:for="{{arraywd}}" class='{{clickDot==index?"provinceActive":""}}' bindtap='clickDot' data-index="{{index}}" data-code="{{item.terminalId}}" data-name="{{item.shopName}}">{{item.shopName}}</view>
      </view>
  </view>
      
  </view>