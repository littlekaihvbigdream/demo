<view class="userInfo">
  <view class='information' bindtap='{{isupdate?"selectimg":""}}'>
    <text>头像</text>
    <view class='rightbox'>
      <image src='{{headimg}}' class='headImg'></image>
    </view>

    <image class='b-rigth' src='../../images/rigth-icon.png'></image>
  </view>
  <view class='information'>
    <text>姓名</text>
    <input placeholder='请输入姓名' disabled="{{isupdate?'':'true'}}" value='{{name}}' bindinput='{{isupdate?"getname":""}}'></input>
  </view>
  <view class='information'>
    <text>性别</text>
    <picker mode="selector" bindchange='{{isupdate?"pickChange":""}}' disabled="{{isupdate?'':'true'}}" value="{{index}}" range="{{array}}">
      <view>{{array[index]}}</view>
    </picker>
    <image class='b-rigth' src='../../images/rigth-icon.png'></image>
  </view>
  <view class='infoPhone'>
    <text>手机号码</text>
    <!-- <input maxlength='11' type='number' value='{{phone}}' disabled='disabled'></input> -->
    <text>{{phone}}</text>
  </view>
  <view class='information'>
    <text>入职时间</text>
