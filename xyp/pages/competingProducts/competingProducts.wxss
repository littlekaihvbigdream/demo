page{
  background-color: #f6f5f5;
}
.top-navs{
  width: 100%;
  /* height: 100%; */
  position: fixed;
  top: 0;
  z-index: 9999;
}
.search{
  height: 120rpx;
  background-color: #fff;
  /* padding: 30rpx 30rpx 0 30rpx; */
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}
.inp{
  width: 100%;
  border-radius: 40rpx;
  background-color: #f6f5f5;
  padding-left: 60rpx;
  position: relative;
  height: 75rpx;
}
.inp>image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 15rpx;
  top: 20rpx;
}
.inp>input{
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}
.b_down{
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #534F4F;
  border-bottom: 1px solid #f6f5f5;
}
.b_down>view{
  width: 100%;
  line-height: 85rpx;
  font-size: 32rpx;
  height: 80rpx;
  text-align: center;
}
.b_down>view>image{
  width: 35rpx;
  height: 40rpx;
}
.txt{
  display: flex;
  align-items: center;
  justify-content: center;
}
.tabActive{
  color: #3BC26D;
}

.slect-box{
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}
.slect1-box{
  padding: 30rpx 0;
  width: 100%;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #f6f5f5;
}
.slect2-box{
  padding: 30rpx;
  width: 100%;
  background-color: #fff;
  border-bottom: 1px solid #f6f5f5;
}
.slect1-box>view{
  font-size: 32rpx;
  color: #534F4F;
}
.slect2-box>view{
    margin-bottom: 10rpx;
  min-width: 130rpx;
  padding: 5rpx 10rpx;
  background-color: #efeded;
  color: #534f4f;
  font-size: 28rpx;
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  display: inline-block;
  margin-right: 25rpx;
}
.slect1-box>.slect-active{
  color: #3BC26D;
}
.slect2-box>.slect1-active{
  color: #3bc26d !important;
  border: 1px solid #3bc26d;
}
.commodity{
  margin-top: 240rpx;
  background-color: #fff;
}
.commodityList{
  display: flex;
  /* justify-content: space-around; */
  padding:10rpx 20rpx;
  border-bottom: 1px solid #f6f5f5;
  align-items: center;
}
.commodityList>view{
  position: relative;
}
.commodityList>view>image:nth-child(1){
  width: 215rpx;
  height: 130rpx;
  margin-right: 20rpx;
}
.commodityList>view>image:nth-child(2){
  position: absolute;
  top: 35%;
  left: 35%;
  width: 43rpx;
  height: 43rpx;
}
.iconright{
  width: 20rpx;
  height: 30rpx;
  margin-left: 0rpx;
  position: absolute;
  right: 20rpx;
}
.comm-text{
  width: auto

}
.comm-text>view:nth-child(1){
  font-size: 30rpx;
  color: #534F4F;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.comm-text>view:nth-child(3){
  font-size: 28rpx;
  color: #3BC26D;
  border: 1px solid #3BC26D;
  width: 150rpx;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  border-radius: 30rpx;
  float: right;
  margin-top: 10rpx;
  margin-right: 30rpx;
}
.b-comm{
  color: #999999;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 16rpx;
}
.down{
  color: #999999;
  font-size: 28rpx;
  padding:30rpx;
  text-align: center;
}