.btns{
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.btns>view{
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 80rpx;
