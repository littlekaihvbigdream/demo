.img-modo{
  position: relative;
}
.commodityList>.img-modo>image:nth-child(1){
  width: 220rpx;
  height: 176rpx;
  margin-right: 10rpx;
}
.commodityList>.img-modo>.new{
  position: absolute;
  right: 0;
  top: -10rpx;
  width: 80rpx;
  height: 80rpx;
}
.commodityList>.img-modo>.Recommend{
  position: absolute;
  left: 0;
  width: 80rpx;
  height: 80rpx;
}
.comm-text{
  margin-left: 10rpx;
  width: 100%;
}
.comm-text image{
  width: 15rpx;
  height: 25rpx;
  margin-left: 10rpx;
}
.comm-text>view:nth-child(1){
  font-size: 30rpx;
  color: #534F4F;
}
.comm-text>button{
  position: absolute;
  bottom: 10rpx;
  right: 30rpx;
  font-size: 28rpx;
  color: #3BC26D;
  border: 1px solid #3BC26D;
  width: 185rpx;
  height: 55rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 30rpx;
  float: right;
  margin-top: 10rpx;
  margin-right: 30rpx;
}
.b-comm{
  color: #999999;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.b-comm>text{
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 1;
overflow: hidden;
margin-right: 20rpx;
width: 100%;
}
.down{
  color: #999999;
  font-size: 28rpx;
  padding:30rpx;
  text-align: center;
}
button{
  margin-left: 20rpx;
