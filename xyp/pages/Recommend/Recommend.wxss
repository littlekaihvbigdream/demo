page{
  background-color: #f6f5f5;
}
.b-box{
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 999;
}
.b-box1{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 999;
}
.search{
  height: 120rpx;
  background-color: #fff;
  /* padding: 30rpx 30rpx 0 30rpx; */
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}
.inp{
  width: 100%;
  border-radius: 40rpx;
  background-color: #f6f5f5;
  padding-left: 60rpx;
  position: relative;
  height: 75rpx;
}
.inp>image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 15rpx;
  top: 20rpx;
}
.inp>input{
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}
.b_down{
  min-height: 100rpx;
  background-color: #fff;
  color: #534F4F;
  display: flex;
  justify-content: space-around;
}
.option{
  display: inline-block;
  /* max-width: 180rpx; */
  margin: 0 20rpx;
  line-height: 85rpx;
  height: 100rpx;
  /* height: 100%; */
  font-size: 32rpx;
  text-align: center;
  position: relative;
}
.option>view{
    max-width: 130rpx;
    display: inline-block;
     overflow: hidden;/*超出部分隐藏*/
    text-overflow:ellipsis;/* 超出部分显示省略号 */
    white-space: nowrap;/*规定段落中的文本不进行换行 */
  vertical-align:middle;
}
.top-tab{
  position: absolute;
  bottom: -8rpx;
  left: 35%;
}
.option>image{
  width: 40rpx !important;
  height: 40rpx !important;
  vertical-align:middle;
}
.tabActive{
  color: #3BC26D;
}
.tabActive1{
  color: #3BC26D !important;
}
.commodity{
  margin-top: 240rpx;
  background-color: #fff;
}
.commodityList{
  display: flex;
  /* align-items: center; */
  /* justify-content: space-between; */
  padding:20rpx 30rpx;
  border-bottom: 1px solid #f6f5f5;
  position: relative;
  /* background-color: red; */

}
