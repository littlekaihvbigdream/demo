.phoneInfo {
  display: flex;
  align-content: center;
  flex-direction: column;
}

.phoneInfo>view:first-child {
  margin-top: 130rpx;
}

.phoneInfo>view {
  display: flex;
  margin: 0 50rpx;
  border-bottom: 1px solid #d8d8d8;
  padding: 50rpx 0 32rpx 0;
}
.getyzm{
  width: 110rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(59, 194, 109, 1);
  color: #fff;
  border: none;
}
.codetype{
  width: 200rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #999;
  color: #fff;
  border: none;
  opacity: 0.5;
}
.phoneInfo>view>text {
  width: 28%;
  font-size: 32rpx;
  color: #434343;
}

.phoneInfo>view>input {
  width: 50%;
}

.tips {
  color: #999;
  font-size: 30rpx;
}

.phoneInfo>button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 703rpx;
  height: 100rpx;
  margin-top: 71rpx;
  background: rgba(59, 194, 109, 1);
  border-radius: 10rpx;
  font-size: 34rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}
