/* 底部弹窗样式 */

.showModo {
  transition: 0.8s;
  width: 100%;
  height: 100%;
  top: 0;
  background-color: rgba(0, 0, 0, 0.3);
  position: fixed;
  z-index: 999;
}

.btn-box {
  width: 100%;
  background-color: #fff;
  position: absolute;
  bottom: 0;
}

.alertImg {
  width: 100%;
  padding-bottom: 50%;
}

.no-data-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.no-data-img {
  width: 60%;
}

.no-data-text {
  font-size: 34rpx;
  color: #999;
}
.info{
  padding: 10rpx 30rpx;
}
