.content{
  padding: 0 30rpx;
}
/*新增列表样式*/
.RelevantName{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  padding-right: 20rpx;
  border-bottom: 20rpx solid #e4e4e4;
}
.RelevantName>view:nth-child(1){
  border-left: 3px solid #3bc26d;
  font-size: 35rpx;
  padding-left: 20rpx;
}
.RelevantName>view:nth-child(2){
  font-size: 28rpx;
  color: #999;
}
.RelevantName>view:nth-child(2)>image{
  width: 15rpx;
  height: 15rpx;
}
.commodity{
  background-color: #fff;
}
.commodityList{
  display: flex;
  /* justify-content: space-around; */
  padding:10rpx 20rpx;
  border-bottom: 1px solid #f6f5f5;
  align-items: center;
}
.commodityList>view{
  position: relative;
}
.commodityList>view>image:nth-child(1){
  width: 215rpx;
  height: 130rpx;
  margin-right: 20rpx;
}
.commodityList>view>image:nth-child(2){
  position: absolute;
  top: 35%;
  left: 35%;
  width: 43rpx;
  height: 43rpx;
}
.iconright{
  width: 20rpx;
  height: 30rpx;
  margin-left: 0rpx;
  position: absolute;
  right: 20rpx;
}
.comm-text{
  width: auto

}
.comm-text>view:nth-child(1){
  font-size: 30rpx;
  color: #534F4F;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.comm-text>view:nth-child(3){
  font-size: 28rpx;
  color: #3BC26D;
  border: 1px solid #3BC26D;
  width: 150rpx;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  border-radius: 30rpx;
  float: right;
  margin-top: 10rpx;
  margin-right: 30rpx;
}
.b-comm{
  color: #999999;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 16rpx;
}