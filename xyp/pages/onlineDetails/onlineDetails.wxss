/* 图文 */

page {
  /* width: 100%; */
  height: 100%;
  background-color: white;
}

.guide-card-top-margin {
  width: 100%;
  height: 147rpx;
}

.guide-card-top-container {
  width: 70%;
  height: 117rpx;
  position: fixed;
  left: 15%;
  top: 30rpx;
  display: flex;
  align-content: center;
  align-items: center;
  z-index: 999;
}

.guide-top-card {
  margin-left: 30rpx;
  width: 75rpx;
  height: 70rpx;
  /* background-color: red; */
}

.guide-top-graph-container {
  margin-right: 16rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* background-color: red; */
}

.guide-top-text-gesture-container {
  width: 100%;
  height: 35%;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background-color: rebeccapurple; */
}

.guide-top-gesture {
  width: 32rpx;
  height: 28rpx;
  /* background-color: red; */
}

.guide-top-text {
  font-size: 28rpx;
  color: #fff;
  margin-right: 8rpx;
}

/* 浮标 */

.float-top {
  width: 60%;
  position: fixed;
  left: 20%;
  top: 30rpx;
  display: flex;
  justify-content: center;
  z-index: 9;
}

.float-left {
  width: 100rpx;
  position: fixed;
  bottom: 50%;
  left: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
}

.float-right {
  width: 100rpx;
  position: fixed;
  bottom: 50%;
  right: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
}

.float-bottom {
  width: 60%;
  position: fixed;
  left: 20%;
  bottom: 30rpx;
  display: flex;
  justify-content: center;
  z-index: 9;
}

.txtImg {
  padding: 30rpx 0;
  background-color: white;
}

.titelName {
  padding: 0 30rpx;
  font-size: 35rpx;
  color: #434343;
}

.times {
  margin: 20rpx 30rpx;
  font-size: 28rpx;
  color: #999;
}

.avatarContainer {
  width: 180rpx;
  height: 350rpx;
  display: flex;
  align-items: center;
  /* background-color:yellow; */
  border-radius: 10rpx;
}

.avatar {
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: 120rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
}

.businessCard {
  border-radius: 20rpx;
  height: 350rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
}

.cardBadgeContainer {
  margin-top: 30rpx;
  width: 122rpx;
  flex-direction: row-reverse;
  align-items: flex-start;
}

.cardBadge {
  width: 122rpx;
}

.userContainer {
  width: 100%;
  height: 350rpx;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: center;
}

.name {
  color: #fff;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.phone {
  align-content: center;
  margin-bottom: 12rpx;
}

.phone>image {
  width: 25rpx;
  height: 25rpx;
}

.phone>text {
  margin-bottom: 24rpx;
  margin-left: 12rpx;
  color: #fff;
  font-size: 26rpx;
}

.adrres {
  display: flex;
  justify-content: left;
}

.adrres>image {
  width: 25rpx;
  height: 25rpx;
}

.adrres>text {
  margin-left: 12rpx;
  color: #fff;
  font-size: 26rpx;
}

.contact-buttons-container {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* background-color: red; */
}

.contact-buttons-container>view {
  width: 50%;
  height: 80rpx;
  border: 1px solid #3bc26d;
  font-size: 28rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact-buttons-container>view:nth-child(1) {
  color: #3bc26d;
  margin-right: 15rpx;
}

.contact-buttons-container>view:nth-child(2) {
  background-color: #3bc26d;
  color: #fff;
  margin-left: 15rpx;
}

.contact-buttons-container image {
  width: 44rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.card-bottom-buttons-container {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #5a5a59;
  font-size: 26rpx;
  /* background-color: red; */
}

.card-bottom-buttons-container>view {
  padding: 10rpx;
  height: 80rpx;
  box-shadow: 0px 3px 10px 0px rgba(8, 1, 3, 0.33);
  border-radius: 10rpx;
  align-items: center;
}

 .guide-card-share-Button {
  width: 100%;
  height: 100%;
  margin-top: -80%;
  display: flex;
  align-items: center;
  justify-content: center !important;
  border: none;
  background-color: rgba(255, 255, 255, 0);
}

button[class="guide-card-share-Button"]::after {
  border: 0;
}
.guide-card-share-container {
  display: flex;
  align-items: center;
}
