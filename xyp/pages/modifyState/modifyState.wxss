.picker-delete-reason-container {
  position: relative;
  border-bottom: 1px solid #e1e1e1;
  height: 106rpx;
}

.delete-reason {
  position: absolute;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
  font-size: 32rpx;
  color: #434343;
  padding: 30rpx;
  background-color: #fff;
}

.picker {
  position: absolute;
  width: 100%;
  height: 106rpx;
  font-size: 30rpx;
  color: #999;
  background: clear;
  /* padding-right: 60rpx; */
}

.picker-view {
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  height: 106rpx;
  background-color: clear;
  /* background-color:red; */
  padding-right: 60rpx;
}

.delete-reason>view:nth-child(1) {
  color: #434343;
  font-size: 32rpx;
}

.cell-disclosure {
  width: 20rpx;
  height: 30rpx;
  padding-right: 60rpx;
}

.slectList {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  /* padding-left: 30rpx;
  padding-right: 30rpx; */
  /* height: 106rpx; */
  border-bottom: 1px solid #d8d8d8;
}

.slectList>view:nth-child(1) {
  color: #434343;
  font-size: 32rpx;
  width: 245rpx;
}

.slectList>view:nth-child(2) {
  display: flex;
  align-items: center;
  text-align: right;
}

.slectList>view:nth-child(2)>view {
  color: #999;
  font-size: 30rpx;
  margin-right: 15rpx;
  width: 500rpx;
  overflow: hidden; /*超出部分隐藏*/
  text-overflow: ellipsis; /* 超出部分显示省略号 */
  white-space: nowrap; /*规定段落中的文本不进行换行 */
}

.slectList>view:nth-child(2)>input {
  font-size: 30rpx;
  margin-right: 15rpx;
}

.slectList>view:nth-child(2)>image {
  margin-top: 5rpx;
  width: 20rpx;
  height: 30rpx;
}

.content {
  padding: 30rpx;
  margin-bottom: 100rpx;
}

.content>view:nth-child(1) {
  color: #434343;
  font-size: 32rpx;
}

.content>view:nth-child(2) {
  margin-top: 20rpx;
  height: 250rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  border: 1px solid #3bc26d;
}

.content>view:nth-child(2)>textarea {
  font-size: 30rpx;
}

button {
  background-color: #3bc26d;
  color: #fff;
  border: none;
  outline: none;
  margin: 30rpx 30rpx;
}

.userPosition {
  padding: 0 20rpx;
  border-bottom: 1px solid #d8d8d8;
}

.userPosition>view {
  color: #434343;
  font-size: 32rpx;
  border: none;
  padding: 10rpx;
}
