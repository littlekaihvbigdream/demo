.top-container {
  width: 100%;
  height: 240rpx;
  position: fixed;
  z-index: 1000
}

.content-container {
  padding-top: 240rpx;
  width: 100%;
} 

.search {
  height: 120rpx;
  background-color: #fff;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e1e1e1;
}

.inp {
  width: 100%;
  border-radius: 40rpx;
  background-color: #f6f5f5;
  padding-left: 60rpx;
  position: relative;
  height: 75rpx;
}

.inp>image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 15rpx;
  top: 20rpx;
}

.cell-disclosure {
  width: 20rpx;
  height: 30rpx;
}

.inp>input {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}

.header-container {
  height: 120rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  color: #434343;
  background-color: #fff;
  border-bottom: 1px solid #e1e1e1;
  padding-left: 24rpx;
  padding-right: 44rpx;
}

.header-container>view {
  display: inline-flex;
  justify-content: center;
  flex: 1;
}

.cell-container-total {
  height: 140rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  color: #434343;
  background-color: #f1fff6;
  border-bottom: 1px solid #e1e1e1;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.cell-container {
  height: 140rpx;
  position: relative;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  font-size: 30rpx;
  color: #434343;
  background-color: #fff;
  border-bottom: 1px solid #e1e1e1;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.cell-container>view {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.cell-container-total>view {
  display: inline-flex;
  justify-content: center;
  flex: 1;
}

.sort {
  display: flex;
  align-items: center;
}

.sort>image {
  width: 30rpx;
  height: 30rpx;
}
