/* pages/UploadFile/UploadFile.wxss */

page {
 width: 100%;
 height: 100%;
}

.box {
  padding: 20rpx;
}

.file1 {
  width: 100%;
  height: 350rpx;
  border-radius: 15rpx;
  overflow: hidden;
  position: relative;
}

.file1>image {
  width: 100%;
}

.file1>view {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
}

.file1>view>image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 18%;
}

.file1>view>view {
  color: #fff;
}

.tips {
  padding: 30rpx;
  text-align: center;
  color: #3bc26d;
  font-size: 26rpx;
}

.upFileList {
}

.upFileList>.list {
  width: 100%;
  height: 350rpx;
  position: relative;
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.upFileList>.list>image:nth-child(1) {
  width: 100%;
  height: 100%;
}

.upFileList>.list>image:nth-child(2) {
  width: 60rpx;
  height: 60rpx;
  top: 10rpx;
  right: 10rpx;
  position: absolute;
}

.commit-button {
  position: fixed;
  background-color: #3bc26d;
  color: #fff;
  bottom: 30rpx !important;
  left: 30rpx;
  right: 30rpx;
}