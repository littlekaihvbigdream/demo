/* pages/searchProblem/searchProblem.wxss */
page{
  background-color: #f6f5f5;
}
.search{
  height: 120rpx;
  background-color: #fff;
  /* padding: 30rpx 30rpx 0 30rpx; */
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  width: 100%;
}
.inp{
  width: 85%;
  border-radius: 40rpx;
  background-color: #f6f5f5;
  padding-left: 60rpx;
  position: relative;
  height: 75rpx;
}
.inp>image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 15rpx;
  top: 20rpx;
}
.inp>input{
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}
.questionList>view{
  padding: 30rpx;
  font-size: 32rpx;
  color: #534F4F;
  border-bottom: 1px solid #f6f5f5;
}