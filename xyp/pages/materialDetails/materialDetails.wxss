page{
  background-color: #fff;
}
.section{
  width: 100%;
}
.section>video{
  width: 100%;
  height:213px;
}
.videoText{
  margin-top: -10rpx;
  padding:20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #D8D8D8;
}
.videoText>view:nth-child(1){
color: #3BC26D;
  font-size: 32rpx;
}
.videoText>view:nth-child(2){
  color: #999999;
  font-size: 28rpx;
}
.details{
  border-bottom: 1px solid #D8D8D8;
}
.details>view{
  display: inline-block;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  color: #3BC26D;
  border-bottom: 1px solid #3BC26D;
}
.content{
  padding: 30rpx;
}
/*轮播样式*/
.banner{
  height: 400rpx;
}
swiper{
  height: 400rpx !important;
}
.slide-image{
  width: 100% !important;
  height: 100% !important;
}