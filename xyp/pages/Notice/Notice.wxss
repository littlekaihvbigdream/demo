page {
  background-color: #f6f5f5;
}

.news {
  width: 100%;
}

.newsList {
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #f6f5f5;
}

.userName {
  position: relative;
  padding-left: 100rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.userName>image {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 0;
}

.userName>view {
  font-size: 32rpx;
  color: #434343;
}

.userName>text {
  font-size: 28rpx;
  color: #999;
}

.cont {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding-left: 100rpx;
  font-size: 28rpx;
  color: #999;
}

.remind {
  position: absolute;
  left: 60rpx;
  top: 0;
  width: 18rpx;
  height: 18rpx;
  background-color: red;
  border-radius: 50%;
}

.down {
  color: #999;
  font-size: 28rpx;
  padding: 30rpx;
  text-align: center;
}
