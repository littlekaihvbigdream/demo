/* pages/myEntry/myEntry.wxss */

page {
  padding-bottom: 60rpx !important;

}

.slectList {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1px solid #d8d8d8;
  font-size: 30rpx;
  color: #999;
}

.slectList>view:nth-child(1) {
  color: #434343;
  font-size: 32rpx;
  width: 245rpx;
}

.slectList>view:nth-child(2) {
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: right;
}

.slectList>view:nth-child(2)>image {
  padding-left: 8rpx;
  width: 20rpx;
  height: 30rpx;
}

.cert-remind-text {
  font-size: 30rpx;
  margin-left: 20rpx;
  color: #434343;
}

.picker-text {
  font-size: 30rpx;
  margin-right: 15rpx;
  width: 500rpx;
  color: #999;
}

.content-back-reason {
    padding: 30rpx;
    color: red;
   font-size: 30rpx;
}
.textarea-container-back-reason {
  margin-top: 20rpx;
  height: 100rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  border: 1px solid #d8d8d8;
}

.content {
  padding: 30rpx;
}

.content>view:nth-child(1) {
  color: #434343;
  font-size: 32rpx;
}

.textarea-container-active {
  margin-top: 20rpx;
  height: 250rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  border: 1px solid #3bc26d;
}

.textarea-container {
  margin-top: 20rpx;
  height: 250rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  border: 1px solid #d8d8d8;
}

.textarea {
  font-size: 30rpx;
  width: 100%;
  height: 250rpx;
}

.slectList>view:nth-child(2)>input {
  font-size: 30rpx;
}

.userPhotos>view>image {
  width: 67rpx;
  height: 67rpx;
}

.PhotoImg {
  width: 690rpx !important;
  height: 331rpx !important;
}

.userPhotos>.add {
  position: absolute;
  top: 30%;
  left: 43%;
  text-align: center;
}

.userPhotos {
  position: relative;
  font-size: 26rpx;
  color: #999;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 331rpx;
  border: 2rpx dashed rgba(59, 194, 109, 1);
  border-radius: 10rpx;
  margin: 16rpx 32rpx 32rpx 32rpx;
}

.submit-button {
  margin: 30rpx 30rpx 0rpx 30rpx;
  background-color: #3bc26d;
  color: #fff;
}

.tips {
  font-size: 26rpx;
  color: #3bc26d;
  text-align: center;
  margin-bottom: 20rpx;
}

.upFileList {
  padding: 0 20rpx;
}

.upFileList>.list {
  width: 100%;
  height: 350rpx;
  position: relative;
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.upFileList>.list>image:nth-child(1) {
  width: 100%;
  height: 100%;
}

.upFileList>.list>image:nth-child(2) {
  width: 60rpx;
  height: 60rpx;
  top: 10rpx;
  right: 10rpx;
  position: absolute;
}

