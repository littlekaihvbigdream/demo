/* pages/Poster/Poster.wxss */

page{
  width: 100%;
  height: auto;
  line-height: 0;
  background-color: #EDEEEF;
}

/* 底部弹窗样式 */
.showModo{
  transition: 0.8s;
  width: 100%;
  height: 100%;
  top: 0;
  background-color: rgba(0, 0, 0, 0.3);
  position: fixed;
  z-index: 999;
}

.btn-box{
  width: 100%;
  background-color: #fff;
  position: absolute;
  bottom: 0;
}
